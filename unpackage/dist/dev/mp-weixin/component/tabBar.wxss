.tarbar {
  z-index: 9999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.tarbar-list {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #4d586f;
  position: fixed;
  left: 0;
  bottom: 0;
}
.tarbar-list-ul {
  width: 100%;
  height: 100%;
  padding: 0rpx 100rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}
.tarbar-list-li {
  width: 100rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.tarbar-list-li-icon {
  width: 100rpx;
  height: 80rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tarbar-list-li-icon image {
  width: 50rpx;
  height: 50rpx;
}
.tarbar-list-li-name {
  width: 100%;
  text-align: center;
  line-height: 30rpx;
  font-size: 24rpx;
  height: 30rpx;
}
.tarbar-list-li-center {
  width: 100rpx;
}
.plus-wrap {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
  background-color: #2643FC;
  bottom: 3rpx;
  left: 50%;
  color: #fff;
  font-size: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 100%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
}
.add-wrap {
  border-top: 2rpx solid #afafaf;
  background-color: #fff;
  border-radius: 31rpx;
  position: relative;
}
.add-wrap button {
  position: absolute;
  right: 70rpx;
  top: 15rpx;
  background-color: #2643FC;
  color: #fff;
}
.add-wrap input {
  box-sizing: border-box;
  height: 24rpx;
  width: 80%;
  margin: 20rpx auto;
  color: #6f6f6f;
}
.add-wrap textarea {
  position: relative;
  height: 300rpx;
  width: 80%;
  border-top: 2px solid #efefef;
  margin: 0 auto;
  padding: 20rpx;
}
.add-wrap .option-wrap {
  position: relative;
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  display: flex;
}
.add-wrap .option-wrap .item-calendar {
  position: relative;
  flex: 1;
  width: 40%;
  color: #6f6f6f;
}
.add-wrap .option-wrap .item-calendar .wrap {
  display: flex;
  background-color: #efefef;
  width: 70%;
  height: 45rpx;
  margin: 0 auto;
  justify-content: center;
  border-radius: 10rpx;
}
.add-wrap .option-wrap .item-flag {
  position: relative;
  flex: 1;
  width: 40%;
  color: #6f6f6f;
}
.add-wrap .option-wrap .item-flag .wrap {
  display: flex;
  background-color: #efefef;
  width: 70%;
  height: 45rpx;
  margin: 0 auto;
  justify-content: center;
  border-radius: 10rpx;
}
.add-wrap image {
  width: 40rpx;
  height: 40rpx;
  -webkit-transform: translate(-20%, 10%);
          transform: translate(-20%, 10%);
}
.flag-wrap {
  width: 500rpx;
  height: 400rpx;
  position: absolute;
  top: -50vh;
  left: 50%;
  font-weight: 700;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
  font-size: 38rpx;
  margin: 0 auto;
}
.flag-wrap .item {
  display: flex;
  flex: 1;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 3px 0px, rgba(0, 0, 0, 0.08) 0px 0px 0px 1px;
}
.flag-wrap .item image {
  flex: 1;
}
.flag-wrap .item text {
  flex: 2;
  line-height: 100rpx;
  text-align: center;
}
.flag-wrap image {
  width: 60rpx;
  height: 60rpx;
  -webkit-transform: translate(0, 40%);
          transform: translate(0, 40%);
}

